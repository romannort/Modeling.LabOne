        <TextBox x:Name="ACoeffInput" HorizontalAlignment="Left" Height="23" Margin="154,13,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120"/>
        <TextBlock x:Name="ACoeffLabel" HorizontalAlignment="Left" Margin="142,17,0,0" TextWrapping="Wrap" Text="a" VerticalAlignment="Top"/>
        <TextBox x:Name="StartingValueInput" HorizontalAlignment="Left" Height="23" Margin="319,13,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120"/>
        <TextBlock x:Name="StartingValueLabel" HorizontalAlignment="Left" Margin="299,17,0,0" TextWrapping="Wrap" Text="R0" VerticalAlignment="Top"/>
        <TextBlock x:Name="ExpectedValueLabel" HorizontalAlignment="Left" Margin="10,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="M"/>
        <TextBox x:Name="ExpectedValueOutput" HorizontalAlignment="Left" Height="23" Margin="37,41,0,0" TextWrapping="Wrap" Text="0.0" VerticalAlignment="Top" Width="181"/>
        <TextBlock x:Name="DeviationLabel" HorizontalAlignment="Left" Margin="234,45,0,0" TextWrapping="Wrap" Text="D" VerticalAlignment="Top"/>
        <TextBox x:Name="DeviationValue" HorizontalAlignment="Left" Height="23" Margin="256,41,0,0" TextWrapping="Wrap" Text="0.0" VerticalAlignment="Top" Width="183"/>
        <TextBlock x:Name="VarianceLabel" HorizontalAlignment="Left" Margin="453,45,0,0" TextWrapping="Wrap" Text="Sigma" VerticalAlignment="Top"/>
        <TextBox x:Name="SigmaOutput" HorizontalAlignment="Left" Height="23" Margin="493,41,0,0" TextWrapping="Wrap" Text="0.0" VerticalAlignment="Top" Width="182"/>
        <TextBlock x:Name="PeriodLabel" HorizontalAlignment="Left" Margin="10,73,0,0" TextWrapping="Wrap" Text="Period" VerticalAlignment="Top"/>
        <TextBox x:Name="PeriodOutput" HorizontalAlignment="Left" Height="23" Margin="49,69,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="79"/>
