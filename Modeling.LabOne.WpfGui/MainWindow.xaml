        <TextBox x:Name="AperiodicOutput" HorizontalAlignment="Left" Height="23" Margin="198,69,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120"/>
        <TextBlock x:Name="PiLabel" HorizontalAlignment="Left" Margin="333,73,0,0" TextWrapping="Wrap" Text="PI" VerticalAlignment="Top"/>
        <TextBox x:Name="PiValue" HorizontalAlignment="Left" Height="23" Margin="349,69,0,0" TextWrapping="Wrap" Text="0.0" VerticalAlignment="Top" Width="139"/>
    </Grid>
</Window>
