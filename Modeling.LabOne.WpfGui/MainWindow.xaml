        <oxy:Plot x:Name="SamplePlot"  Margin="0,107,0,10" MaxWidth="800" MinWidth="400"/>
        <TextBox x:Name="MCoeffInput" HorizontalAlignment="Left" Height="23" Margin="37,13,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="91"/>
